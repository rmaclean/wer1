{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "bun-types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
